{
  "compilerOptions": {
    "outDir": "./dist",
    "types": [ "node" ],
    "target": "es2016", 
    "module": "ESNext", 
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
